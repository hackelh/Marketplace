<script>
    document.addEventListener('livewire:load', function () {
        Livewire.on('notify', data => {
            // Gestion des notifications via un système de toasts
            const toast = document.createElement('div');
            toast.className = `fixed top-4 right-4 p-4 rounded-md shadow-lg text-white ${data.type === 'success' ? 'bg-green-500' : 'bg-red-500'}`;
            toast.textContent = data.message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.remove();
            }, 5000);
        });
    });
</script>
@endpush
